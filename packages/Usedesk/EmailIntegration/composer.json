{
    "name": "Usedesk/EmailIntegration",
    "type": "library",
    "description": ":package_description",
    "keywords": [
        "Usedesk",
        "EmailIntegration"
    ],
    "homepage": "https://github.com/Usedesk/EmailIntegration",
    "license": "MIT",
    "authors": [
        {
            "name": "antonyminkowski",
            "email": "antonyminkowski@gmail.com",
            "homepage": "http://www.usedesk.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "~7.1",
        "illuminate/support": "~5.1",
        "php-imap/php-imap": "^3.0",
        "webklex/laravel-imap": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit" : ">=5.4.3",
        "orchestra/testbench" : "~3.5.0",
        "squizlabs/php_codesniffer": "^2.3"
    },
    "autoload": {
        "psr-4": {
            "Usedesk\\EmailIntegration\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Usedesk\\EmailIntegration\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests",
        "fix-style": "phpcbf -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
